{
	"manifest_version": 2,
	"name":			"Pixiv One-click Bookmarker",
	"version":		"1.0",
	"description":	"Add One-click Bookmark button on Pixiv",
	"permissions": [
		"<all_urls>",
		"webRequest" ,
		"webRequestBlocking"
	],
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"content_scripts": [
		{
			"matches":[ "http://www.pixiv.net/member_illust.php?mode=medium&illust_id=*" ],
			"js":[ "js/add_bookmarker.js" ]
		},
		{
			"matches": [
				"http://www.pixiv.net/member.php?id=*",
				"http://www.pixiv.net/member_illust.php*",
				"http://www.pixiv.net/bookmark.php?id=*",
				"http://www.pixiv.net/stacc/*"
			],
			"js": [
				"js/jquery-2.1.3.min.js",
				"js/follow.js"
			]
		},
		{
			"matches":[ "http://www.pixiv.net/member_illust.php?mode=medium&illust_id=*" ],
			"js": [
				"js/jquery-2.1.3.min.js",
				"js/post_to_tumblr.js"
			]
		}
	]
}
